<!DOCTYPE html>
<html>
  <head>
    <title>{{title}}</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>

  <body>
      {{> header }}

      <main role="main">
        {{{body}}}
      </main>

      {{> footer }}

    <script src="/javascripts/lib/raphael.js"></script>
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js" type="text/javascript"></script>
    <script src="/javascripts/color.jquery.js"></script>
    <script src="/javascripts/jquery.usmap.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" type="text/javascript">

    </script>

    <script type="text/javascript">
      var pollData = {{{pollData}}};

      $('#map').usmap({
        useAllLabels: true,

        'click' : function(event, data) {

          var clickedState = pollData.find(state => {
              return state.stateAbbrev === data.name;
          });

          $('#alert')
            .html(`<p>You selected ${clickedState.state}. </p>
              <ul>
                <li>
                  <a href="${clickedState.voterRegistrationHomePage}" target="_blank">Voter Registration</a>
                </li>
                <li>
                  <a href="${clickedState.registrationStatusCheck}" target="_blank">Registration Status</a>
                </li>
              </ul>`)
            .stop()
            .css('backgroundColor', '#ff0')
            .animate({backgroundColor: '#ddd'}, 1000);
        }
      });
    </script>
  </body>
</html>
